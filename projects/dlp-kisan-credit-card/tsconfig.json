{
    "compileOnSave": false,
    "compilerOptions": {
      "paths": {
        "@kcc-app/*": [
          "src/app/*"
        ],
        "@kcc-app-components/*": [
          "src/app/components/*"
        ],
        "@kcc-assets/*": [
          "src/assets/*"
        ],
        "@kcc-configuration/*": [
          "src/configuration/*"
        ],
        "@kcc-environments/*": [
          "src/environments/*"
        ]
      },
      "baseUrl": "./",
      "outDir": "./dist/out-tsc",
      "sourceMap": true,
      "declaration": false,
      "downlevelIteration": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "useDefineForClassFields": false,
      "target": "ES2022",
      "module": "ES2022",
      "lib": [
        "es2018",
        "dom",
        "ES2022"
      ]
    }
  }
  