{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "@hl-app/*": [
        "src/app/*"
      ],
      "@hl-app-components/*": [
        "src/app/components/*"
      ],
      "@hl-assets/*": [
        "src/assets/*"
      ],
      "@hl-configuration/*": [
        "src/configuration/*"
      ],
      "@hl-environments/*": [
        "src/environments/*"
      ]
    },
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": false,
    "target": "ES2022",
    "module": "ES2022",
    "lib": [
      "es2018",
      "dom",
      "ES2022"
    ]
  }
}
